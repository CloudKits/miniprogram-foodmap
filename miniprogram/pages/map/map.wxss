map {
  width: 750rpx;
}

/* 顶部添加我的小程序提示 */
.add_me {
  font-size: 30rpx;
  color: #fff;
  background-color: rgb(62, 207, 142);
  width: 450rpx;
  padding: 20rpx;
  position: absolute;
  right: 10rpx;
  top: 20rpx;
  text-align: center;
}

.nav{
  position: absolute;
  left: calc(50% - 140px);
  bottom: 20px;
  background-color: rgb(255, 255, 255);
  border-radius: 50rpx;
  box-shadow: 0 4px 6px rgba(50,50,93,.11), 0 1px 3px rgba(0,0,0,.08);
}

/* 底部导航栏 */
.nav-tabbar {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.nav-tabbar-image{
  width: 20px;
  height: 20px;
  margin-bottom: 3px;
}


